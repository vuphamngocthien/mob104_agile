<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:id="@+id/layout_item_sanpham"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/im_avtSP"
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tv_TenSP"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:lines="2"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="210dp"
        android:fontFamily="@font/nunito"
        android:textStyle="bold"
        android:gravity="center"
        android:text="TextView"
        android:textSize="15dp"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tv_GiaSP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="260dp"
        android:layout_marginBottom="7dp"
        android:fontFamily="@font/nunito"
        android:textStyle="bold"
        android:text="TextView"
        android:textSize="15dp"
        android:textColor="#F53649" />



    <ImageView
        android:id="@+id/im_update"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="255dp"
        android:layout_marginLeft="130dp"
        android:background="@drawable/ic_baseline_border_color_24" />

    <ImageView
        android:id="@+id/im_delete"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="255dp"
        android:layout_marginLeft="160dp"
        android:background="@drawable/ic_baseline_delete_24" />
</androidx.cardview.widget.CardView>