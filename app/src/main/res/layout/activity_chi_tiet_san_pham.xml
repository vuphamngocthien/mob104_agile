<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ChiTietSanPhamActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_CTSP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="54dp"
        android:layout_marginTop="7dp"
        android:fontFamily="@font/nunito"
        android:text="Chi tiết Sản phẩm"
        android:textColor="#F53649"
        android:textSize="30dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/im_getavt"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/toolbar_CTSP"
        tools:srcCompat="@tools:sample/avatars" />
<!--    <TextView-->
<!--        android:layout_width="160dp"-->
<!--        android:layout_height="160dp"-->
<!--        android:layout_marginTop="30dp"-->
<!--        android:layout_marginRight="10dp"-->
<!--        android:layout_marginLeft="10dp"-->
<!--        android:layout_marginBottom="10dp"-->
<!--        android:layout_toRightOf="@+id/checkBox"-->
<!--        android:layout_below="@+id/toolbar_CTSP"-->
<!--        android:background="@drawable/custom_layout_themsp"-->
<!--        />-->
    <TextView
        android:id="@+id/tv_getMaSP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ten san pham"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:gravity="center"
        android:fontFamily="@font/nunito"
        android:textStyle="bold"
        android:layout_below="@+id/tv_getGia"
        android:layout_toRightOf="@+id/tv_getTenSP"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/tv_getTenSP"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/im_getavt"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/nunito"
        android:lines="2"
        android:textColor="@color/black"
        android:text="Ten san pham"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_getGia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gia san pham"
        android:textColor="#F53649"
        android:textSize="20dp"
        android:fontFamily="@font/nunito"
        android:textStyle="bold"
        android:layout_below="@+id/im_getavt"
        android:layout_toRightOf="@+id/tv_getTenSP"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/tv_getMota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mo ta san pham"
        android:textColor="@color/black"
        android:textSize="17dp"
        android:fontFamily="@font/nunito"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/tv_getGia"
        android:layout_marginTop="40dp" />

    <ImageView
        android:id="@+id/im_cart"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="30dp"
        android:layout_toRightOf="@+id/im_addYT"
        android:background="@drawable/icons8_fast_cart" />

    <ImageView
        android:id="@+id/imthemvaogio"
        android:layout_width="250dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/imgh"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="-35dp"
        />

    <ImageView
        android:id="@+id/im_addYT"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="35dp"
        android:layout_alignParentBottom="true"
        app:srcCompat="@drawable/heart" />

</RelativeLayout>