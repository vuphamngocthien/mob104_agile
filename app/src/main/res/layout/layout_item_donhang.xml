<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/layout_item_donhang"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F6F5F5"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        app:cardCornerRadius="10dp"
        android:layout_margin="10dp"
        android:layout_marginBottom="5dp">

        <ImageView
            android:id="@+id/im_avtDH"
            android:layout_width="153dp"
            android:layout_height="156dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="10dp"
            tools:srcCompat="@tools:sample/avatars" />
        <TextView
            android:id="@+id/tv_tenSPDH"
            android:layout_width="200dp"
            android:lines="2"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="TextView"
            android:textStyle="bold"
            android:fontFamily="@font/nunito"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:layout_marginStart="190dp"/>

        <TextView
            android:id="@+id/tv_giatien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="190dp"
            android:layout_marginTop="80dp"
            android:text="TextView"
            android:textSize="20dp"
            android:fontFamily="@font/nunito"
            android:textColor="#F53649"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/im_avtDH"
            android:layout_below="@+id/tv_tenSPDH"/>

        <TextView
            android:id="@+id/tv_soluong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="190dp"
            android:layout_marginTop="140dp"
            android:text="TextView"
            android:textStyle="bold"
            android:fontFamily="@font/nunito"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/im_avtDH"
            android:layout_below="@+id/tv_giatien"/>
    </androidx.cardview.widget.CardView>

</RelativeLayout>